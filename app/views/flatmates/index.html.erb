<p id="notice"><%= notice %></p>

<h1>Flatmates</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Leaving out time</th>
      <th>Arriving time</th>
      <th>Duties</th>
      <th>Charges</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flatmates.each do |flatmate| %>
      <tr>
        <td><%= flatmate.firstname %></td>
        <td><%= flatmate.lastname %></td>
        <td><%= flatmate.leaving_out %></td>
        <td><%= flatmate.ariiving %></td>
        <td><%= flatmate.duties %></td>
        <td><%= flatmate.charges %></td>
        <td><%= link_to 'Show', flatmate %></td>
        <td><%= link_to 'Edit', edit_flatmate_path(flatmate) %></td>
        <td><%= link_to 'Destroy', flatmate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

